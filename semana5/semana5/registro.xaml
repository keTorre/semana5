<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="semana5.registro"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana registro" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
            <Entry x:Name="txtCodigo" Placeholder="Id" Keyboard="Numeric"/>
            <Entry x:Name="txtNombre" Placeholder="Nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Apellido"/>
            <Entry x:Name="txtEdad" Placeholder="Edad" Keyboard="Numeric"/>

            <Grid>
                <Grid.RowDefinitions>
                <RowDefinition/>                    
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnInsertar" Text="Insertar" Clicked="btnInsertar_Clicked" Grid.Row="0" Grid.Column="1"/>
                <Button x:Name="btnCancelar" Text="Carncelar" Clicked="btnCancelar_Clicked" Grid.Row="0" Grid.Column="0"/>
            </Grid>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>